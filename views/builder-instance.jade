.container
    //- The template for rendering a single instance of the builder - allows multiple builder tabs to be open at once.
    script(type='text/template')#controller-wrap
        <% String.prototype.clean = function(trim) { var cutoff = 10000000; var appendMe = ""; if (typeof trim !== "undefined" && trim == true) { if (this.length > 27){ appendMe = "...."; cutoff = 27} }return this.charAt(0).toUpperCase() + this.slice(1).replace("_"," ")} %>       
        header
            h2.section-title.fl
                span.title-wrap <%= typeof section_title !== "undefined" ? section_title : "Default Section Title" %>
                span.fr (Click to change section title) 
            ul.main-controls
                li.icon-uniF47C.config-section Config
                li.icon-download.save-section Save
                li.icon-cogs.settings Settings
            //- li.help Help

        .config-panel.p30
            p.nice-dialog
                | Configure your data in this area. Start by choosing data properties to include in 
                | your section.

            div.fl.w45.m10
                h2.m10.center Add Content to this Section
                input#search-data-types(type='text', placeholder='Search Data Types').w9.mauto
                ul.select-properties.class-list.m10
            //- div.fl.w05.icon.center.right-arrow
            //-     span s
            div.fl.w4.m30
                ul.property-editor
                    li.center.p10.placeholder You have not selected any data yet.
            ul.existing-sections-layouts.dark-sidebar.sidebar-controls.w15.fr.hidden
                li.list-header.p10 Recent Sections
                li.p10.placeholder There are no sections.
            .clear  
        .section-builder-wrap
            div.toolbelt
            //-  Generic elements to drag into the builder
            div.dark-sidebar.sidebar-controls.accessories
                ul.organize-elements
                    li.list-header 
                        span.section-content Section Content
                        i.icon-uniF488.fl.hide-sidebar
            ul.outside-draggables
                li.generic-elements
                    | Elements
                    ul
                li.layout-types
                    | Layouts
                    ul
            ul.builder-toggles
                li.icon-selectionrmove(data-switch-text='With Grid', data-switch-icon='icon-selectionadd').no-grid Without Grid

                //- li.advanced 
                //-     | Advanced
                //-     ul
            

            
            //- The container for the builder itself.
            section.builder-container
            //- The UI architecture panel, which shows the overall structure of the section.
            .clear
