
script(type='text/template')#element-sortable-item
    .sort-element t
    div.activate-element m
    div.destroy-element g
    <span class='element-title'>
    <%= (typeof title !== "undefined" && title !== "") ?  title.clean(true) : "Default Title" %>
    </span>
    <%= (typeof type !== "undefined" && type !== "") ?  " - " + type : "" %>
    ul.child-list
script(type='text/template')#draggable-element
    h3 <%= typeof title !== "undefined" ? title.clean() : type.clean() %>
    <ul class='children'>
    </ul>
script(type='text/template')#drag-controls
    <% var layout = typeof layout !== "undefined" && layout == true ? true : false %>
    ul.config-menu-wrap.no-drag 
        li.icon.set-options e
            ul.dropdown
                li.config-panel Configure <%= layout == true ? "Group" : "Element" %>
                li.export Export As Section
                <%= layout == true ? "<li class='ungroup-fields'>Ungroup fields</li>" : "" %>
        li.icon.remove-from-flow g
script(type='text/template')#property-link
    span(contentEditable='false').property-link <%= property_name  %> 
        i.icon.remove-property-link g
script(type='text/template')#context-menu-default
    li.group-elements Group selected
