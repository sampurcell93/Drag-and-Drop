script(type='text/template')#layout-item
    <%= name %>
    .close-modal.icon g
script(type="text/template")#picker-interface
    button.try-layout Try Layout On Selected
    ul.layout-list
    div.close-modal.icon g
script#dynamic-layout(type='text/template')
    p.p10.center.placeholder Drop a property, section, UI element, or another dynamic layout here.
script#dynamic-container(type='text/template')
    p.p10.center.placeholder Dynamic Container here
script#tab-layout(type='text/template')
    p.p10.center.placeholder Tabs here    
script#tab-layout-settings(type='text/template')
    | TAB SETTINGS
script#accordion-layout(type='text/template')
    p.p10.center.placeholder Accordion here!
script#freeform-layout(type='text/template')
    p.p10.center.placeholder Free form layout here!
    <% for (var j = 0; j < rows; j++) { %>
    div.builder-element
        | ROW
        <% for (var i = 0; i < columns; i++) { %>
        div.builder-element
            | COL
    <% } %>
    <% } %>
    
script#freeform-layout-settings(type='text/template')
    input(data-property='columns', type='text', placeholder='Number of columns', value='2').set-columns
    input(data-property='rows', type='text', placeholder='Number of rows', value='2').set-rows
    button.submit.fr Ok
script#column-picker(type='text/template')
    h2 Choose a column layout
    ul.choose-columns
        li(data-columns='one-column') One Column
        li(data-columns='two-column') Two Columns
        li(data-columns='three-column') Three Columns
        li(data-columns='four-column') Four Columns
        li(data-columns='five-column') Five Columns
        li(data-columns='six-column') Six Columns
script#blank-layout(type='text/template')